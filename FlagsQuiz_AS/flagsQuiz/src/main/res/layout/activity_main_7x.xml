<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/mainTitle"
        android:layout_width="540dp"
        android:layout_height="187dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainGraphic"
        android:layout_below="@+id/mainTitle"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/rate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_rate_main" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_share_main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/verticalBtns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/play"
                android:layout_width="250dp"
                android:layout_height="86dp"
                android:background="@drawable/button_play_main" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="250dp"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_settings_main" />

            <ImageButton
                android:id="@+id/exit"
                android:layout_width="250dp"
                android:layout_height="86dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_exit_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/leaderboard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_leaderboard_main" />

            <ImageButton
                android:id="@+id/sound"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_sound_on_main" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/mainGraphic"
        android:layout_width="580dp"
        android:layout_height="296dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/main_graphic" />

</RelativeLayout>