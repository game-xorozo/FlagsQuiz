<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/correctDlg"
        android:layout_width="300dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:background="@drawable/red_dlg_bg"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/stars"
                android:layout_width="100dp"
                android:layout_height="48dp"              
                android:src="@drawable/stars" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:fontFamily="verdana"
                android:text="@string/correctDlg"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF"
                android:textSize="27sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correctDlg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <Button
            android:id="@+id/mainBtn"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:background="@drawable/button_dlg_main" />

        <Button
            android:id="@+id/wikipediaBtn"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_dlg_wikipedia" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_dlg_next" />
    </LinearLayout>

</RelativeLayout>