<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/redDlg"
        android:layout_width="570dp"
        android:layout_height="307dp"
        android:layout_gravity="center"
        android:background="@drawable/red_dlg_bg"
        android:padding="5dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"
            android:textSize="75sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wrongDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/redDlg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/mainBtn"
            android:layout_width="140dp"
            android:layout_height="66dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_dlg_main" />

        <Button
            android:id="@+id/retryBtn"
            android:layout_width="140dp"
            android:layout_height="66dp"
            android:background="@drawable/button_dlg_retry" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alertDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:layout_below="@id/redDlg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/dismissBtn"
            android:layout_width="140dp"
            android:layout_height="66dp"
            android:background="@drawable/button_red_dlg_dismiss" />
    </LinearLayout>

</RelativeLayout>