<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:centerColor="#666466"
        		android:endColor="#5b595b"
       			android:startColor="#757375"              
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <gradient
                android:angle="270"
        		android:centerColor="#323234"
        		android:endColor="#1a1a1a"
        		android:startColor="#4e4d4e" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>