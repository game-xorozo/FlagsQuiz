<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:centerColor="#e77823"
        		android:endColor="#e06201"
       			android:startColor="#f78e3e"               
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>

            <gradient
                android:centerColor="#f7b904"
        		android:endColor="#e39304"
       			android:startColor="#fcc304"               
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>